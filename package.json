{
  "name": "gitswitch",
  "displayName": "GitSwitch",
  "description": "Manage and switch between multiple GitHub accounts efficiently - git config, SSH keys, and tokens",
  "version": "0.1.0",
  "publisher": "hamad-javed",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hamad-javed/gitswitch"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "github",
    "account",
    "switch",
    "ssh",
    "profile",
    "multi-account"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitswitch.addProfile",
        "title": "GitSwitch: Add Profile",
        "icon": "$(add)"
      },
      {
        "command": "gitswitch.removeProfile",
        "title": "GitSwitch: Remove Profile",
        "icon": "$(trash)"
      },
      {
        "command": "gitswitch.switchProfile",
        "title": "GitSwitch: Switch Profile",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "gitswitch.editProfile",
        "title": "GitSwitch: Edit Profile",
        "icon": "$(edit)"
      },
      {
        "command": "gitswitch.showCurrentProfile",
        "title": "GitSwitch: Show Current Profile",
        "icon": "$(account)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitswitch",
          "title": "GitSwitch",
          "icon": "resources/gitswitch.svg"
        }
      ]
    },
    "views": {
      "gitswitch": [
        {
          "id": "gitswitchProfiles",
          "name": "Profiles"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "gitswitch.addProfile",
          "when": "view == gitswitchProfiles",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gitswitch.switchProfile",
          "when": "view == gitswitchProfiles",
          "group": "inline@1"
        },
        {
          "command": "gitswitch.editProfile",
          "when": "view == gitswitchProfiles",
          "group": "1_actions@1"
        },
        {
          "command": "gitswitch.removeProfile",
          "when": "view == gitswitchProfiles",
          "group": "1_actions@2"
        }
      ]
    },
    "configuration": {
      "title": "GitSwitch",
      "properties": {
        "gitswitch.defaultScope": {
          "type": "string",
          "default": "local",
          "enum": [
            "local",
            "global"
          ],
          "description": "Default scope when switching git config (local = current repo, global = all repos)"
        },
        "gitswitch.autoSwitchRemote": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update remote URL to use the correct SSH host alias when switching profiles"
        }
      }
    }
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "vsce package",
    "publish": "vsce publish",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  }
}
